{
  "rewrites": [
    { "source": "/login", "destination": "/" },
    { "source": "/admin", "destination": "/" },
    { "source": "/(.*)", "destination": "/" }
  ],
  "crons": [
    {
      "path": "/api/instagram",
      "schedule": "0 */6 * * *"
    }
  ],
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ]
}
